@{
    if (this.User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    }
    else if (this.User.IsInRole("Employee"))
    {
        Layout = "~/Views/Shared/_Employee_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

